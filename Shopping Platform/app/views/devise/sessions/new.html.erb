<h2 style="text-align: center; margin-bottom: 15px;">Just Buy It ~</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { style: 'text-align: center;' }) do |f| %>
  <div class="field" style="margin-bottom: 15px; text-align: left; width: 300px; margin: 0 auto;">
    <%= f.label :email, style: 'display: block;' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", style: 'width: 100%; padding: 8px; box-sizing: border-box;' %>
  </div>

  <div class="field" style="margin-bottom: 15px; text-align: left; width: 300px; margin: 0 auto;">
    <%= f.label :password, style: 'display: block;' %>
    <%= f.password_field :password, autocomplete: "current-password", style: 'width: 100%; padding: 8px; box-sizing: border-box;' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field" style="margin-bottom: 15px; text-align: left; width: 300px; margin: 0 auto;">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions" style="text-align: center;">
    <%= f.submit "Log in", style: "width: 85px; background-color: #007bff; color: #ffffff; padding: 10px 15px; border: none; border-radius: 4px; cursor: pointer; font-size: 16px; margin-right: 10px;" %>
    <%= link_to "Sign up", new_registration_path(resource_name), style: "width: 100px; text-decoration: none; background-color: #28a745; color: #ffffff; padding: 10px 15px; border: none; border-radius: 4px; cursor: pointer; font-size: 16px;" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
