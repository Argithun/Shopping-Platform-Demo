<!-- app/views/devise/registrations/new.html.erb -->
<div style="text-align: center; width: 300px; margin: 0 auto; margin-top: 30px;">
  <h2 style="margin-bottom: 15px;">Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { style: 'text-align: center;' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div style="margin-bottom: 15px; text-align: left; width: 100%; margin: 0 auto;">
      <%= f.label :role, style: 'display: block;' %>
      <%= f.select :role, [['Buyer', 'buyer'], ['Admin', 'admin']], style: 'width: 100%; padding: 8px; box-sizing: border-box;' %>
    </div>

    <div style="margin-bottom: 15px; text-align: left; width: 100%; margin: 0 auto;">
      <%= f.label :phone_number, style: 'display: block;' %>
      <%= f.text_field :phone_number, style: 'width: 100%; padding: 8px; box-sizing: border-box;' %>
    </div>

    <div style="margin-bottom: 15px; text-align: left; width: 100%; margin: 0 auto;">
      <%= f.label :email, style: 'display: block;' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", style: 'width: 100%; padding: 8px; box-sizing: border-box;' %>
    </div>

    <div style="margin-bottom: 15px; text-align: left; width: 100%; margin: 0 auto;">
      <%= f.label :password, style: 'display: block;' %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", style: 'width: 100%; padding: 8px; box-sizing: border-box;' %>
    </div>

    <div style="margin-bottom: 15px; text-align: left; width: 100%; margin: 0 auto;">
      <%= f.label :password_confirmation, style: 'display: block;' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", style: 'width: 100%; padding: 8px; box-sizing: border-box;' %>
    </div>

    <div style="margin-bottom: 15px; text-align: left; width: 100%; margin: 0 auto;">
      <br />
    </div>

    <div style="text-align: center; margin-bottom: 15px;">
      <%= f.submit "Sign up", style: "width: 150px; background-color: #28a745; color: #ffffff; padding: 10px 15px; border: none; border-radius: 4px; cursor: pointer; font-size: 16px;" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
