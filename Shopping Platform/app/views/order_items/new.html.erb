<%= link_to "Back to My Cart", cart_items_path, class: "btn btn-secondary-back" %>

<div class="order-edit">
  <h1>Fill Order Details</h1>

  <%= form_with(model: @order_item, local: true) do |form| %>
    <%= form.hidden_field :user_id %>
    <%= form.hidden_field :total_amount %>
    <%= form.hidden_field :order_status %>
    <%= form.hidden_field :product_id %>
    <%= form.hidden_field :quantity %>

    <div class="form-group">
      <%= form.label :receiver %>
      <%= form.text_field :receiver, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :shipping_address %>
      <%= form.text_field :shipping_address, class: "form-control", required: true%>
    </div>

    <div class="form-group">
      <%= form.label :phone_number %>
      <%= form.text_field :phone_number, class: "form-control", required: true%>
    </div>

    <div class="form-group">
      <%= form.label :postal_code %>
      <%= form.text_field :postal_code, class: "form-control", required: true%>
    </div>

    <div class="actions">
      <%= form.submit "Submit Order", class: "btn btn-primary-submit" %>
    </div>
  <% end %>
</div>

<style>
  .order-edit {
    margin-top: 20px;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .btn {
    display: inline-block;
    font-weight: 400;
    color: #fff;
    text-align: center;
    vertical-align: middle;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    border: 1px solid transparent;
    padding: 0.375rem 0.75rem;
    font-size: 1rem;
    line-height: 1.5;
    border-radius: 0.25rem;
    transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    text-decoration: none;
    margin-right: 5px;
  }

  .btn-primary {
    color: #fff;
    background-color: #007bff;
    border-color: #007bff;
  }

  .btn-primary-submit {
    color: #fff;
    background-color: #007bff;
    border-color: #007bff;
    background-image: url(https://argithun-blog-1321510384.cos.ap-beijing.myqcloud.com/icons/ic_submit.png); /* 替换为你的图标路径 */
    background-repeat: no-repeat;
    background-size: 20px 20px; /* 设置图标大小，单位可以是像素或百分比 */
    background-position: left center; /* 图标居左显示 */
    padding-left: 35px; /* 调整左内边距以容纳图标 */
    padding-right: 20px; /* 调整右内边距 */
    border-width: 1px 10px; /* 分别指定垂直和水平方向的边框宽度 */
    border-style: solid; /* 边框样式为实线 */
  }

  .btn-primary:hover {
    background-color: #0056b3;
    border-color: #0056b3;
  }

  .btn-secondary {
    color: #fff;
    background-color: #6c757d;
    border-color: #6c757d;
  }

  .btn-secondary-back {
    color: #fff;
    background-color: #6c757d;
    border-color: #6c757d;
    background-image: url(https://argithun-blog-1321510384.cos.ap-beijing.myqcloud.com/icons/ic_back.png); /* 替换为你的图标路径 */
    background-repeat: no-repeat;
    background-size: 20px 20px; /* 设置图标大小，单位可以是像素或百分比 */
    background-position: left center; /* 图标居左显示 */
    padding-left: 35px; /* 调整左内边距以容纳图标 */
    padding-right: 20px; /* 调整右内边距 */
    border-width: 1px 10px; /* 分别指定垂直和水平方向的边框宽度 */
    border-style: solid; /* 边框样式为实线 */
  }

  .btn-secondary:hover {
    background-color: #5a6268;
    border-color: #545b62;
  }
</style>
