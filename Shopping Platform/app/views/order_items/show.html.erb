<%= link_to "Back to Order List", order_items_path, class: "btn btn-secondary-back" %>

<div class="order-details">
  <h1>Details</h1>

  <div class="product-details">
    <h2>Product Details</h2>
    <table class="table">
      <tbody>
        <tr>
          <td><strong>Name:</strong></td>
          <td><%= @product.name %></td>
        </tr>
        <tr>
          <td><strong>Description:</strong></td>
          <td><%= @product.description %></td>
        </tr>
        <tr>
          <td><strong>Price:</strong></td>
          <td><%= number_to_currency(@product.price) %></td>
        </tr>
        <tr>
          <td><strong>Sales:</strong></td>
          <td><%= @product.sales %></td>
        </tr>
        <tr>
          <td><strong>Image:</strong></td>
          <td><%= image_tag @product.image_path, width: 300, height: 200 %></td>
          <%# image_tag , width: 300, height: 200 %>
        </tr>
        <tr>
          <td><strong>Product Type:</strong></td>
          <td><%= @product.product_type %></td>
        </tr>
        <tr>
          <td><strong>Color:</strong></td>
          <td><%= @product.color %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="order-item-details">
    <h2>Order Details</h2>
    <table class="table">
      <tbody>
        <tr>
          <td><strong>Receiver:</strong></td>
          <td><%= @order_item.receiver %></td>
        </tr>
        <tr>
          <td><strong>Shipping Address:</strong></td>
          <td><%= @order_item.shipping_address %></td>
        </tr>
        <tr>
          <td><strong>Phone Number:</strong></td>
          <td><%= @order_item.phone_number %></td>
        </tr>
        <tr>
          <td><strong>Postal Code:</strong></td>
          <td><%= @order_item.postal_code %></td>
        </tr>
        <tr>
          <td><strong>Quantity:</strong></td>
          <td><%= @order_item.quantity %></td>
        </tr>
        <tr>
          <td><strong>Total Amount:</strong></td>
          <td><%= number_to_currency(@order_item.total_amount) %></td>
        </tr>
        <tr>
          <td><strong>Order Status:</strong></td>
          <td><%= @order_item.order_status %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<style>
  .order-details {
    margin-top: 20px;
  }

  .table {
    width: 50%;
    border-collapse: collapse;
    margin-top: 20px;
  }

  th, td {
    padding: 8px;
    border: 1px solid #ddd;
    text-align: left;
  }

  th {
    background-color: #f2f2f2;
  }

  .btn {
    display: inline-block;
    font-weight: 400;
    color: #fff;
    text-align: center;
    vertical-align: middle;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    border: 1px solid transparent;
    padding: 0.375rem 0.75rem;
    font-size: 1rem;
    line-height: 1.5;
    border-radius: 0.25rem;
    transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    text-decoration: none;
  }

  .btn-secondary {
    color: #fff;
    background-color: #6c757d;
    border-color: #6c757d;
  }

  .btn-secondary-back {
    color: #fff;
    background-color: #6c757d;
    border-color: #6c757d;
    background-image: url(https://argithun-blog-1321510384.cos.ap-beijing.myqcloud.com/icons/ic_back.png); /* 替换为你的图标路径 */
    background-repeat: no-repeat;
    background-size: 20px 20px; /* 设置图标大小，单位可以是像素或百分比 */
    background-position: left center; /* 图标居左显示 */
    padding-left: 35px; /* 调整左内边距以容纳图标 */
    padding-right: 20px; /* 调整右内边距 */
    border-width: 1px 10px; /* 分别指定垂直和水平方向的边框宽度 */
    border-style: solid; /* 边框样式为实线 */
  }

  .btn-secondary:hover {
    background-color: #5a6268;
    border-color: #545b62;
  }
</style>
