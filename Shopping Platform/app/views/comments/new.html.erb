<%= link_to "Back to Product Details", product_path(@product), class: "btn btn-secondary-back" %>

<h1>Comment for this product</h1>

<%= form_with(model: [@product, @comment], url: product_comments_path(@product), method: :post) do |form| %>
  <div class="field">
    <%= form.text_area :content, cols: 120, rows: 18 %>
  </div>

  <%= form.submit "Create Comment", class: "btn btn-primary-submit" %>
<% end %>


