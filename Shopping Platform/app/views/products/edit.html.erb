<h1>Edit Product</h1>

<%= form_with(model: @product, url: product_path(@product), method: :patch, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %><br />
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %><br />
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price %><br />
    <%= form.text_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :sales %><br />
    <%= form.number_field :sales, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :image_path %>
    <em>(Must be empty or a VALID picture URL, or it will be fail to create.)</em><br />
    <%= form.text_field :image_path, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :product_type %><br />
    <%= form.text_field :product_type, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :color %><br />
    <%= form.text_field :color, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Update Product", class: "btn btn-primary" %>
    <%= link_to "Back", products_path, class: "btn btn-secondary" %>
  </div>
<% end %>

<style>
  .form-group {
    margin-bottom: 15px;
  }

  .form-control {
    width: 100%;
    padding: 8px;
    margin-top: 4px;
    margin-bottom: 4px;
    box-sizing: border-box;
  }

  .btn {
    display: inline-block;
    font-weight: 400;
    color: #fff;
    text-align: center;
    vertical-align: middle;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    background-color: #007bff;
    border: 1px solid #007bff;
    padding: 0.375rem 0.75rem;
    font-size: 1rem;
    line-height: 1.5;
    border-radius: 0.25rem;
    transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    text-decoration: none;
  }

  .btn-secondary {
    color: #fff;
    background-color: #6c757d;
    border-color: #6c757d;
  }

  .btn-primary {
    color: #fff;
    background-color: #007bff;
    border-color: #007bff;
  }

  .btn:hover {
    color: #fff;
    text-decoration: none;
  }

  .form-group textarea {
    font-family: 'Arial', sans-serif; /* 设置字体样式，这里以 Arial 为例 */
    font-size: 14px; /* 设置字体大小 */
  }
</style>
